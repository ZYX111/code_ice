<ion-header>
    <ion-navbar>
        <ion-title>检查风险</ion-title>
    </ion-navbar>
</ion-header>
<ion-content>
    <ion-list inset>
        <ion-item>
            <ion-label>时间：{{checktime}}</ion-label>
        </ion-item>
        <ion-item>
            <ion-label>地点：{{riskbehavior.riskname}}</ion-label>
        </ion-item>
        <ion-item>
            <ion-label>问题描述：</ion-label>
            <ion-input type="text" [(ngModel)]="description"></ion-input>
        </ion-item>
        <ion-item>
            <ion-label>风险图片：</ion-label>
            <img src="">
        </ion-item>
        <ion-item>
            <button ion-button (click)="cancel()">取消</button>
            <button ion-button (click)="save()">确定</button>
        </ion-item>
    </ion-list>
</ion-content>
