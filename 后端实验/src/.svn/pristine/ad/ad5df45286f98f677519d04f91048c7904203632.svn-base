/*horizontal-btn-box*/
.button-box {
    display: -webkit-flex;
    display: flex;
    text-align: center;
}
.button-box .button {
    line-height: 23px;
    flex: 1;
    -webkit-flex: 1;
}
.button-box .button {
    border-width: 0;
    width: 80%;
    background-color: #e9e9e9;
    box-shadow: 5px 5px 5px #aaa;
}
.button-box .btn-title {
    margin-top: 5px;
}
.horizontal-btn-box .button-bar > .button:before, 
.horizontal-btn-box .button-bar > .button .icon:before {
    line-height: 20px;
}
.button-box .tabs {
    background-color: #fff;
}
.button-box .tabs > .tab-item {
    color: #000;
    border-style: solid;
    border-color: #ccc;
    border-width: 0px 1px 1px 0;
    box-shadow: 0 2px 5px #ddd;
}
.button-box .tabs > .tab-item:last-child {
    border-radius: 0;
    border-right-width: 0;
}
.swiper-slide img {
    height: 100%;
}

/* alert */
.alert-md .alert-wrapper {
    border-radius: 10px;
    overflow: hidden;
    max-width: 270px;
    background-color: #f8f8f8;
    box-shadow: none;
}
.alert-md .alert-head {
    padding: 12px 16px 7px;
    text-align: center;
}
.alert-md .alert-title {
    margin-top: 8px;
    font-size: 17px;
    font-weight: 600;
}
.alert-md .alert-message {
    max-height: 240px;
}
.alert-md .alert-message, .alert-md .alert-input-group {
    padding: 0 16px 21px;
    font-size: 13px;
    text-align: center;
    color: inherit;
}
.alert-md .alert-button-group {
    -webkit-flex-wrap: wrap;
    -ms-flex-wrap: wrap;
    flex-wrap: wrap;
    margin-right: -0.55px;
    -webkit-justify-content: center;
    -ms-flex-pack: center;
    justify-content: center;
    padding: 0px;
}
.alert-md .alert-button {
    overflow: hidden;
    -webkit-flex: 1 1 auto;
    -ms-flex: 1 1 auto;
    flex: 1 1 auto;
    margin: 0;
    min-width: 50%;
    height: 44px;
    border-top: 0.55px solid #dbdbdf;
    border-right: 0.55px solid #dbdbdf;
    border-radius: 0;
    font-size: 17px;
    color: #387ef5;
    background-color: transparent;
}
.alert-md .alert-button:last-child {
    border-right: 0;
    font-weight: bold;
}
.alert-md .alert-button .button-inner {
    -webkit-justify-content: center;
    -ms-flex-pack: center;
    justify-content: center;
}